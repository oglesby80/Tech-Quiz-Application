{
  "compilerOptions": {
    "target": "es2022",         // Modern JavaScript for tests
    "module": "esnext",         // ES Module syntax
    "moduleResolution": "node", // Resolve modules like Node.js
    "strict": true,             // Enable strict type checking
    "esModuleInterop": true,    // Ensure compatibility with CommonJS
    "resolveJsonModule": true,  // Allow importing JSON files
    "skipLibCheck": true,       // Skip type checks for libraries
    "jsx": "react-jsx",         // Needed for component tests in React
    "types": ["cypress"]        // Include Cypress types
  },
  "include": [
    "cypress/**/*.ts",          // Include all Cypress test files
    "cypress/**/*.tsx"          // Include React-based component tests
  ],
  "exclude": [
    "node_modules"              // Exclude dependencies
  ]
}

  